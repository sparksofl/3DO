h1 = @model.name 

div class="models-container"
	div class="mdl"
		div class="image"
			= image_tag @model.image, width: "250px", height: "250px"
	div class="order"
		button
			= link_to "Order now!", new_order_path(@model)

div class="info-col"
	- if @model.user_id == current_user.id
		= form_for @model, method: :delete, data: { confirm: 'Are you sure?' } do |f|
				= f.submit :value => "Delete model", :class => "btn-del"